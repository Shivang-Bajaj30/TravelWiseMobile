<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image (Your scenic mountain/travel image) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/image9"
        android:scaleType="centerCrop"
        android:contentDescription="@string/background2"/>

    <!-- Overlay for better text visibility -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#204E4A4A"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/glassmorphism_circle"
                android:contentDescription="Back"
                app:tint="@android:color/white"
                android:layout_gravity="start"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp" />

            <!-- Glassmorphism Card Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loginCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                android:backgroundTint="#00000000"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp"
                    android:background="@drawable/glassmorphism_bg">



                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back"
                        android:textSize="28sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"/>

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login to continue your journey!"
                        android:textSize="18sp"
                        android:textColor="#E6FFFFFF"
                        android:layout_gravity="center"
                        android:layout_marginBottom="28dp"/>

                    <!-- Email Input with Glassmorphism -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="@android:color/white"
                        app:hintTextColor="#FFFFFF"
                        app:boxBackgroundColor="#92DCD9D9"
                        app:boxStrokeColor="@android:color/white"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="@android:color/white"
                            android:textColorHint="#99E7DDDD"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input with Glassmorphism -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@android:color/white"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@android:color/white"
                        app:hintTextColor="#F2FFFFFF"
                        app:boxBackgroundColor="#91DCD9D9"
                        app:boxStrokeColor="@android:color/white"
                        app:boxStrokeWidth="1dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@android:color/white"
                            android:textColorHint="#99FFFFFF"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Forgot Password -->
                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:padding="8dp"
                        android:layout_marginBottom="24dp"/>

                    <!-- Login Button -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLogin"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Login"
                            android:textSize="17sp"
                            android:textAllCaps="false"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black"
                            app:cornerRadius="28dp"
                            app:backgroundTint="@android:color/white"
                            android:elevation="6dp"
                            app:icon="@drawable/ic_arrow_forward"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/black"
                            app:iconSize="22dp" />

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressLogin"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="24dp"
                            android:visibility="gone"
                            app:indicatorColor="@color/black" />

                    </FrameLayout>

                    <!-- Divider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:alpha="0.5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OR LOGIN WITH"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:alpha="0.5"/>
                    </LinearLayout>

                    <!-- Social Login Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <!-- Google Button -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnGoogleLogin"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#4DFFFFFF"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_google"
                                android:layout_gravity="center"
                                android:contentDescription="Google Login"/>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Facebook Button -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnFacebookLogin"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#4DFFFFFF"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_facebook"
                                android:layout_gravity="center"
                                android:contentDescription="Facebook Login"/>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sign Up Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="12dp"
                android:background="@drawable/glassmorphism_signup_bg"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? "
                    android:textColor="@android:color/white"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>