<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ItineraryResultsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Image with Overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/primary"
                android:foregroundGravity="bottom">

                <ImageView
                    android:id="@+id/ivHeaderImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Destination image" />

                <!-- Dark Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_dark_overlay" />

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    app:tint="@color/white" />

                <!-- Share Button -->
                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="12dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_share"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Share"
                    app:tint="@color/white" />

                <!-- Destination Name and Details Overlay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvDestinationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goa"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:shadowColor="#80000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                    <TextView
                        android:id="@+id/tvTripDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05 Nov 2025 - 13 Nov 2025 â€¢ 7 Persons"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:shadowColor="#80000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                </LinearLayout>

            </FrameLayout>

            <!-- Itinerary Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="18dp"
                android:paddingBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp"
                    app:cardUseCompatPadding="true">

                    <!-- Filter bar: horizontal list of options -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@android:color/transparent"
                        android:overScrollMode="never">

                        <LinearLayout
                            android:id="@+id/llFilterBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <Button
                                android:id="@+id/btnFilterOverall"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Overall" />

                            <Button
                                android:id="@+id/btnFilterHotels"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hotels"
                                android:layout_marginStart="12dp" />

                            <Button
                                android:id="@+id/btnFilterAttractions"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Places"
                                android:layout_marginStart="12dp" />

                            <Button
                                android:id="@+id/btnFilterFlights"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flights"
                                android:layout_marginStart="12dp" />

                            <Button
                                android:id="@+id/btnFilterMeals"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food"
                                android:layout_marginStart="12dp" />

                            <Button
                                android:id="@+id/btnFilterTransport"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transport"
                                android:layout_marginStart="12dp" />

                        </LinearLayout>

                    </HorizontalScrollView>

                    <!-- RecyclerView: overall day-by-day cards -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDayItinerary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:clipChildren="true"
                        android:scrollbars="none"
                        tools:listitem="@layout/item_day_itinerary"
                        android:padding="8dp" />

                    <!-- RecyclerView: filtered flat activity list (hidden by default) -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFilteredActivities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:clipToPadding="false"
                        android:clipChildren="true"
                        android:scrollbars="none"
                        tools:listitem="@layout/item_itinerary_activity"
                        android:padding="8dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
