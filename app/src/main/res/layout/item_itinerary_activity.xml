<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Timeline (Dot and Connector) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="12dp">

        <View
            android:id="@+id/viewDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle_dot_primary"
            android:layout_marginTop="6dp" />

        <View
            android:id="@+id/viewConnector"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/divider"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp" />
    </LinearLayout>

    <!-- Activity Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Time -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore Destination"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover the beauty and culture of this amazing destination"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Optional thumbnail for activity/hotel image -->
    <ImageView
        android:id="@+id/ivActivityImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Activity image"
    android:scaleType="centerCrop"
    android:visibility="gone" />

</LinearLayout>